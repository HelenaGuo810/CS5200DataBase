generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  StudentID   Int       @id @default(autoincrement())
  FirstName   String
  LastName    String
  TargetSchool String?
  Track       String?
  Email       String    @unique
  Password    String
  Appointments Appointment[] @relation("StudentToAppointment")
}

model Mentor {
  MentorID     Int       @id @default(autoincrement())
  FirstName    String
  LastName     String
  Specialization String?
  Availability String?
  Email        String     @unique
  Password    String
  Appointments Appointment[] @relation("MentorToAppointment")
}

model Appointment {
  AppointmentID Int      @id @default(autoincrement())
  StudentID     Int
  MentorID      Int
  Date          String
  Time          String
  
  Student       Student  @relation("StudentToAppointment", fields: [StudentID], references: [StudentID])
  Mentor        Mentor   @relation("MentorToAppointment", fields: [MentorID], references: [MentorID])
}

