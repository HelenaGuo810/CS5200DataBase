// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  StudentID   Int       @id @default(autoincrement())
  FirstName   String
  LastName    String
  TargetSchool String?
  Track       String?
  Email       String    @unique
}

model Mentor {
  MentorID     Int       @id @default(autoincrement())
  FirstName    String
  LastName     String
  Specialization String?
  Availability String?
  Email        String     @unique
}

